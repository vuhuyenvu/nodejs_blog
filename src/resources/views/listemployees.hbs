<div class='container'>
    <div class='row'>
        <div class='col-md-12'>
            <h2>{{title}}</h2>
            <table class='table'>
                <thead>
                    <tr>
                        <th scope='col'>#</th>
                        <th scope='col'>ID</th>

                        <th scope='col'>First Name</th>

                        <th scope='col'>Last Name</th>

                        <th scope='col'>Email</th>
                        <th scope='col'>Phone </th>

                        <th scope='col'>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                        <tr>
                            <td name='id'>{{this.id}}</td>
                            <td>{{this.first_name}}</td>
                            <td>{{this.last_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>
                                <a
                                    href='/employee/edit/{{this.id}}'
                                    class='btn btn-sm btn-info edit'
                                >Edit</a>
                                <a
                                    href='javascript:void(0);'
                                    class='btn btn-sm btn-danger delete'
                                >Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>