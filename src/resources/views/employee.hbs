<div class='container'>
    <div class='row'>
        <div class='col-md-12'>
            <h2>{{title}}</h2>
            <form action='/employee/addEmployee' method='POST'>
                <div class='form-group row'>
                    <label
                        for='first_name'
                        class='col-sm-2 col-form-label'
                    >First Name</label>
                    <div class='col-sm-10'>
                        <input
                            type='text'
                            class='form-control'
                            id='first_name'
                            name='first_name'
                            placeholder='Name'
                        />
                    </div>
                </div>

                <div class='form-group row'>
                    <label
                        for='email'
                        class='col-sm-2 col-form-label'
                    >Email</label>
                    <div class='col-sm-10'>
                        <input
                            type='email'
                            class='form-control'
                            id='email'
                            name='email'
                            placeholder='Email'
                        />
                    </div>
                </div>

                <div class='form-group row'>
                    <div class='col-sm-10'>
                        <button
                            type='submit'
                            class='btn btn-primary'
                        >Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>